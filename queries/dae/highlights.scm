; =============================================================================
; Tree-sitter Highlight Queries for DAE language
; =============================================================================

; -----------------------------------------------------------------------------
; Types
; -----------------------------------------------------------------------------

(namespaced_identifier) @type
(cidr_identifier) @type

; -----------------------------------------------------------------------------
; Properties / Parameters
; -----------------------------------------------------------------------------

(parameter_assignment key: (identifier) @property)
(parameter_assignment value: (_) @string)

; -----------------------------------------------------------------------------
; Functions / Calls
; -----------------------------------------------------------------------------

(function_call name: (identifier) @function.call)
(argument_list (identifier) @variable.parameter)

; -----------------------------------------------------------------------------
; Keywords
; -----------------------------------------------------------------------------

[
  "filter"
] @keyword

; -----------------------------------------------------------------------------
; Operators
; -----------------------------------------------------------------------------

[
  "->"
  ":"
  "!"
  "&&"
] @operator

; -----------------------------------------------------------------------------
; Literals
; -----------------------------------------------------------------------------

(string) @string
(number) @number
(time_duration) @number

; -----------------------------------------------------------------------------
; Identifiers / Variables
; -----------------------------------------------------------------------------

(identifier) @variable
(block_definition name: (identifier) @namespace)

; -----------------------------------------------------------------------------
; Brackets / Delimiters / Punctuation
; -----------------------------------------------------------------------------

["{" "}"] @punctuation.bracket
["(" ")"] @punctuation.bracket
["[" "]"] @punctuation.bracket
[","] @punctuation.delimiter

; -----------------------------------------------------------------------------
; Comments
; -----------------------------------------------------------------------------

(comment) @comment @spell
